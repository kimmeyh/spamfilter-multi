{
    "cSpell.words": [
        "cand",
        "conds",
        "diplay",
        "Imgur",
        "isregex",
        "Kimmey",
        "levelname",
        "protomail",
        "protonmail",
        "rulesregex",
        "safesenders",
        "spamfilter"
    ],
    // Ensure VS Code uses the local venv interpreter for this workspace
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
    // Terminal integration - auto-activate venv in new terminals
    "python.terminal.activateEnvironment": true,
    // Testing configuration
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}"
}